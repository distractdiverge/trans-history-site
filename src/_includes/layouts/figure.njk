---
layout: base.njk
---

<article class="detail-page">
  <header class="detail-hero">
    <div class="detail-image-wrapper">
      {% if image %}
        <img src="/images/{{ image }}" alt="{{ name }}" class="detail-image">
      {% else %}
        <div class="detail-image-placeholder"></div>
      {% endif %}
    </div>
    <div class="detail-title">
      <h1>{{ name }}</h1>
      {% if pronouns %}
        <p class="pronouns">{{ pronouns }}</p>
      {% endif %}
      {% if born or died %}
      <p class="lifespan">
        {% if born %}{{ born }}{% endif %}
        {% if born and died %}&ndash;{% endif %}
        {% if died %}{{ died }}{% endif %}
      </p>
      {% endif %}
    </div>
    <div class="detail-actions">
      <button class="button share-button">Share</button>
      <a href="{{ site.repositoryUrl }}/edit/main/content/figures/{{ page.fileSlug }}.md" class="button suggest-edit-button" target="_blank">Suggest Edit</a>
    </div>
  </header>

  <section class="detail-section biography">
    <h2>Biography</h2>
    {{ templateContent | markdown | safe }}
  </section>

  {% if notable_for and notable_for.length > 0 %}
  <section class="detail-section notable-for">
    <h2>Notable For</h2>
    <ul>
      {% for item in notable_for %}
      <li>{{ item | safe }}</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% if sources and sources.length > 0 %}
  <section class="detail-section sources">
    <h2>Sources</h2>
    <ul>
      {% for source in sources %}
      <li>{{ source | safe }}</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  <section class="detail-section editorial-history">
    <h2>Editorial History</h2>
    <p>To improve this entry, please <a href="{{ site.repositoryUrl }}/edit/main/content/figures/{{ page.fileSlug }}.md" target="_blank" rel="noopener">suggest an edit on GitHub</a>.</p>
    <div class="qr-code" id="edit-qr-code"></div>
  </section>
</article>

<nav class="figure-navigation" aria-label="Figure navigation">
  {#- Find previous and next figures in the collection -#}
  {% set prev = null %}
  {% set next = null %}
  {% for item in collections.figuresByYear %}
    {% if item.url == page.url %}
      {% set prev = collections.figuresByYear[loop.index0 - 1] %}
      {% set next = collections.figuresByYear[loop.index0 + 1] %}
    {% endif %}
  {% endfor %}

  <ul class="pagination">
    {% if prev %}
    <li class="prev"><a href="{{ prev.url | url }}">&larr; {{ prev.name }}</a></li>
    {% else %}
    <li></li> {# Empty item for spacing #}
    {% endif %}
    {% if next %}
    <li class="next"><a href="{{ next.url | url }}">{{ next.name }} &rarr;</a></li>
    {% else %}
    <li></li> {# Empty item for spacing #}
    {% endif %}
  </ul>

  <div class="back-link">
    <a href="/timeline/">&larr; Back to Timeline</a>
  </div>
</nav>
