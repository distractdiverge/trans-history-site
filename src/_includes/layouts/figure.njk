---
layout: base.njk
---

<article class="figure-detail">
  <header class="figure-header">
    <h1>{{ name }}</h1>
    {% if born or died %}
      <p class="lifespan">
        {% if born %}{{ born }}{% endif %}{% if died %} â€“ {{ died }}{% endif %}
      </p>
    {% endif %}
    {% if pronouns %}
      <p class="pronouns">Pronouns: {{ pronouns }}</p>
    {% endif %}
  </header>

  <div class="figure-content">
    {{ content | safe }}
  </div>

  {% if notable_for and notable_for.length > 0 %}
    <section class="notable-for">
      <h2>Notable For</h2>
      <ul>
        {% for item in notable_for %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}

  {% if sources and sources.length > 0 %}
    <section class="sources">
      <h2>Sources</h2>
      <ul>
        {% for source in sources %}
          <li>{{ source | safe }}</li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
</article>

<nav class="figure-navigation" aria-label="Figure navigation">
  {#- Find previous and next figures in the collection -#}
  {% set prev = null %}
  {% set next = null %}
  {% for item in collections.figuresByYear %}
    {% if item.fileSlug == figure.fileSlug %}
      {% set prev = collections.figuresByYear[loop.index0 - 1] %}
      {% set next = collections.figuresByYear[loop.index0 + 1] %}
    {% endif %}
  {% endfor %}

  <div class="nav-links">
    {% if prev %}
      <a href="/figures/{{ prev.fileSlug }}/" class="nav-previous" aria-label="Previous figure: {{ prev.data.name }}">
        &larr; {{ prev.data.name }}
      </a>
    {% endif %}
    
    {% if next %}
      <a href="/figures/{{ next.fileSlug }}/" class="nav-next" aria-label="Next figure: {{ next.data.name }}">
        {{ next.data.name }} &rarr;
      </a>
    {% endif %}
  </div>
  
  <div class="back-link">
    <a href="/timeline/">&larr; Back to Timeline</a>
  </div>
</nav>
